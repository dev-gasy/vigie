{
  "name": "@dgig-vigie/types",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "exports": {
    "./*": "./src/*.ts",
    ".": "./src/index.ts"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,js,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,js,md,json}\""
  },
  "devDependencies": {
    "@dgig-vigie/eslint-config": "workspace:*",
    "@dgig-vigie/prettier-config": "workspace:*",
    "@dgig-vigie/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "typescript": "5.9.2"
  },
  "prettier": "@dgig-vigie/prettier-config"
}
